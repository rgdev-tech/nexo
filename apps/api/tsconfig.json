{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "noEmit": false,
    "types": ["bun", "node", "jest"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "api/**/*.ts", "test/**/*.ts"]
}
