# ─── Supabase ────────────────────────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ─── Servidor ────────────────────────────────────────────────────────────────
PORT=3000
HOST=0.0.0.0
CORS_ORIGINS=https://yourapp.com,https://staging.yourapp.com
