{
  "expo": {
    "name": "nexo",
    "slug": "nexo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "nexo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f0f12"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "dev.rgtech.nexo",
      "infoPlist": {
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSFaceIDUsageDescription": "Nexo usa Face ID para proteger tu balance."
      },
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0f0f12"
      },
      "package": "dev.rgtech.nexo",
      "usesCleartextTraffic": true,
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-asset",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Nexo usa Face ID para proteger tu balance."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#0f0f12"
        }
      ],
      [
        "expo-widgets",
        {
          "groupIdentifier": "group.dev.rgtech.nexo",
          "widgets": [
            {
              "name": "NexoParalelo",
              "displayName": "Dólar Paralelo",
              "description": "1 USD en bolívares (paralelo)",
              "supportedFamilies": ["systemSmall", "accessoryRectangular", "accessoryInline"]
            }
          ]
        }
      ]
    ],
    "experiments": {
      "autolinkingModuleResolution": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "c70657e7-5c18-42a4-aa04-de00f2c6e1af"
      }
    },
    "owner": "rgdev-owner"
  }
}
